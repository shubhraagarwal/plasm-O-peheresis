    <link href="https://fonts.googleapis.com/css2?family=Merriweather&display=swap" rel="stylesheet">

</head>

<body>

      <!-- navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg my-navbar">
    <!-- Image and text -->
    <nav class="navbar navbar-light">
      <a class="navbar-brand" href="/index">
        <img src="blood-drop.png" width="30" height="30" class="d-inline-block align-top" alt="" loading="lazy">
        plasm-O-pheresis
      </a>
    </nav>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link link" href="/index#about">About</a>
        </li>
        <li class="nav-item">
          <a class="nav-link link" href="/faq">FAQ</a>
        </li>
        <li class="nav-item">
          <a class="nav-link link" href="/index#contact">Contact</a>
        </li>
        <li class="nav-item">
          <a class="nav-link link" href="/signup">Sign up</a>
        </li>
        <li class="nav-item">
          <a class="nav-link link" href="/login">Login</a>
        </li>
    </div>
  </nav>

  <div class="welcome-message">
      <h2>Welcome</h2>
      <form action="/logout" method="POST">
        <button type="submit" class="btn btn-lg" style="margin-top: 0.5rem background-color="coral";">LOGOUT</button>
      </form>
  </div>

  <div class="container user-form">
      <form action="/add" id="userForm" method="POST">
          <label for="name" id="form-label">Name</label>
            <input type="text" placeholder="Enter Name" id="form-input" name="item[name]" required>
          <label for="age" id="form-label">Age</label>
            <input type="number" placeholder="Enter Age" id="form-input" name="item[age]" required>
          <label for="blood-group" id="form-label">Blood Group</label>
            <input type="text" placeholder="Enter Blood Group" name="item[blood]" required>
          <label for="conact-number" id="form-label">Contact Number</label>
            <input type="number" name="item[contact]" placeholder="Enter Contact Number" id="form-input" required>
          <label for="address" id="form-label">Address</label>
            <input type="text" id="form-input" placeholder="Enter Address" name="item[address]" required>
          <label for="date" id="form-label">Date of Recovery</label>
            <input type="date" id="form-input" placeholder="Enter the date of Recovery" name="item[date]" required>
          <br>
          <button type="submit" class="btn btn-lg" style="margin-top: 0.5rem;">Submit</button></a>
      </form>
  </div>

  <div class="donor-data-heading">
      <h2>
          List of Plasma Donors
      </h2>
  </div>

  <div class="donor-data">
    <table class = "item imp">
        <tr>
          <th>Name</th>
          <th>Age</th>
          <th>Blood Group</th>
          <th>Contact Number</th>
          <th>Address</th>
          <th>Date of Recovery</th>
        </tr>
        <% items.forEach(function(item){ %>
        <tr>
            <td>
            <% if (item.name) { %>
                <span><h1 style="color: greenyellow;"><b><%= item.name %></b></h1></span>
            <% } %>
            </td>
            <td>
            <% if (item.age) { %>
                <span><h1 style="color: greenyellow;"><b><%= item.age %></b></h1></span>
            <% } %>
            </td>
            <td>
            <% if (item.blood) { %>
                <span><h1 style="color: greenyellow;"><b><%= item.blood %></b></h1></span>
            <% } %>
            </td>
            <td>
            <% if (item.contact) { %>
                <span><h1 style="color: greenyellow;"><b><%= item.contact %></b></h1></span>
            <% } %>
            </td>
            <td>
            <% if (item.address) { %>
                <span><h1 style="color: greenyellow;"><b><%= item.address %></b></h1></span>
            <% } %>
            </td>
            <td>
            <% if (item.date) { %>
                <span><h1 style="color: greenyellow;"><b><%= item.date %></b></h1></span>
            <% } %>
            </td>
            <td>
            <% if (item.itemfile) { %>
                <span><img style="width: 200px;" src="./files/<%= item.itemfile %>"/></span>
            <% } %>
            </td>
        </tr>
         <% }) %>
      </table>
    
      </body>
      </html>
    
  </div>


  <footer>
    <div class="footer">
      <p>Copyright &copy; 2020 | plasm-O-pheresis</p>
    </div>
  </footer>


